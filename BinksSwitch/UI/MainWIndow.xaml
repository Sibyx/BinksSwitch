<Window x:Class="BinksSwitch.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinksSwitch.UI"
        mc:Ignorable="d"
        Title="BinksSwitch" 
        Height="300" 
        Width="700"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>

        <Button 
            Grid.Row="0" 
            Width="50" 
            Click="StartSwitchClick"
            HorizontalAlignment="Left">
            Start
        </Button>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>

            <DataGrid 
                ItemsSource="{Binding}" 
                AutoGenerateColumns="False" 
                Grid.Column="0" 
                CanUserResizeColumns="False"
                Name="DeviceTable">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Running" Binding="{Binding Path=IsOpened, Mode=OneWay}" Width="15*"/>
                    <DataGridTextColumn Header="Name"  Binding="{Binding Path=Name, Mode=OneWay}" Width="45*"/>
                    <DataGridTextColumn Header="Sent"  Binding="{Binding Path=Sent, Mode=OneWay}" Width="15*"/>
                    <DataGridTextColumn Header="Received"  Binding="{Binding Path=Received, Mode=OneWay}" Width="15*"/>
                </DataGrid.Columns>
            </DataGrid>

            <DataGrid
                ItemsSource="{Binding}"
                AutoGenerateColumns="False"
                Grid.Column="1"
                CanUserResizeColumns="False"
                Name="CamTable">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="MAC Address" Binding="{Binding Value.PhysicalAddress}" Width="30*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Device" Binding="{Binding Value.Device}" Width="60*"></DataGridTextColumn>
                    <DataGridTextColumn Header="TTL" Binding="{Binding Value.TTL}" Width="10*"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
