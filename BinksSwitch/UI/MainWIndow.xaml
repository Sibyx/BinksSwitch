<Window x:Class="BinksSwitch.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:BinksSwitch.UI"
        mc:Ignorable="d"
        Title="BinksSwitch" 
        Height="400" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>

        <StackPanel 
            Grid.Row="0"
            HorizontalAlignment="Left"
            Orientation = "Horizontal">
            <Button 
                Width="30" 
                Name="StartSwitchButton"
                Click="StartSwitchClick">
                <fa:ImageAwesome Icon="Play" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
            </Button>
            <Button 
                Width="30" 
                Name="StopSwitchButton"
                IsEnabled="False"
                Click="StopSwitchClick">
                <fa:ImageAwesome Icon="Stop" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
            </Button>
        </StackPanel>

        <StackPanel 
            Grid.Row="0"
            HorizontalAlignment="Right"
            Orientation = "Horizontal">
            <Button 
                Width="30" 
                Name="ClearCamButton"
                Click="ClearCamClick">
                <fa:ImageAwesome Icon="Refresh" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
            </Button>
            <Button 
                Width="30"
                Name="SettingsButton"
                Click="SettingsClick"
                >
                <fa:ImageAwesome Icon="Gears" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
            </Button>
        </StackPanel>


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>

            <DataGrid 
                ItemsSource="{Binding}" 
                AutoGenerateColumns="False" 
                Grid.Column="0" 
                CanUserResizeColumns="False"
                Name="DeviceTable">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Running" Binding="{Binding Path=IsOpened, Mode=OneWay}" Width="15*"/>
                    <DataGridTextColumn Header="Name"  Binding="{Binding Path=Name, Mode=OneWay}" Width="45*"/>
                    <DataGridTextColumn Header="Sent"  Binding="{Binding Path=Sent, Mode=OneWay}" Width="15*"/>
                    <DataGridTextColumn Header="Received"  Binding="{Binding Path=Received, Mode=OneWay}" Width="15*"/>
                </DataGrid.Columns>
            </DataGrid>

            <DataGrid
                ItemsSource="{Binding}"
                AutoGenerateColumns="False"
                Grid.Column="1"
                CanUserResizeColumns="False"
                Name="CamTable">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="MAC Address" Binding="{Binding PhysicalAddress}" Width="30*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Device" Binding="{Binding Device}" Width="60*"></DataGridTextColumn>
                    <DataGridTextColumn Header="TTL" Binding="{Binding TTL}" Width="10*"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Grid.Row="2">
            <DataGrid 
                ItemsSource="{Binding}" 
                AutoGenerateColumns="False" 
                CanUserResizeColumns="False"
                Name="StatisticsTable">
                
                <DataGrid.Resources>
                    <local:StatisticsConverter x:Key="StatsRecordConverter" />
                </DataGrid.Resources>
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Device" Binding="{Binding Path=Name, Mode=OneWay}" Width="15*"/>
                    <DataGridTextColumn Header="TCP" Binding="{Binding Path=Statistics[TCP], Mode=OneWay, Converter={StaticResource StatsRecordConverter}}" Width="5*"/>
                    <DataGridTextColumn Header="UDP" Binding="{Binding Path=Statistics[UDP], Mode=OneWay, Converter={StaticResource StatsRecordConverter}}" Width="5*"/>
                    <DataGridTextColumn Header="ICMPv4" Binding="{Binding Path=Statistics[ICMPv4], Mode=OneWay, Converter={StaticResource StatsRecordConverter}}" Width="5*"/>
                    <DataGridTextColumn Header="ICMPv6" Binding="{Binding Path=Statistics[ICMPv6], Mode=OneWay, Converter={StaticResource StatsRecordConverter}}" Width="5*"/>
                    <DataGridTextColumn Header="IPv4" Binding="{Binding Path=Statistics[IPv4], Mode=OneWay, Converter={StaticResource StatsRecordConverter}}" Width="5*"/>
                    <DataGridTextColumn Header="IPv6" Binding="{Binding Path=Statistics[IPv6], Mode=OneWay, Converter={StaticResource StatsRecordConverter}}" Width="5*"/>
                    <DataGridTextColumn Header="ARP" Binding="{Binding Path=Statistics[ARP], Mode=OneWay, Converter={StaticResource StatsRecordConverter}}" Width="5*"/>
                    <DataGridTextColumn Header="LLDP" Binding="{Binding Path=Statistics[LLDP], Mode=OneWay, Converter={StaticResource StatsRecordConverter}}" Width="5*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
