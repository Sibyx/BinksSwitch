<Window x:Class="BinksSwitch.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinksSwitch.UI"
        mc:Ignorable="d"
        Title="Binks Switcg" 
        Height="300" 
        Width="700"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>

        <Button 
            Grid.Row="0" 
            Width="50" 
            Click="StartSwitchClick"
            HorizontalAlignment="Left">
            Start
        </Button>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>

            <DataGrid 
                ItemsSource="{Binding}" 
                AutoGenerateColumns="False" 
                Grid.Column="0" 
                CanUserResizeColumns="False"
                Name="DeviceTable">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Opened"  Binding="{Binding IsOpened}" Width="15*"/>
                    <DataGridTextColumn Header="Name"  Binding="{Binding Name}" Width="45*"/>
                    <DataGridTextColumn Header="Sent"  Binding="{Binding Sent}" Width="15*"/>
                    <DataGridTextColumn Header="Received"  Binding="{Binding Received}" Width="15*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
